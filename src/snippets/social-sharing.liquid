<ul class="social-sharing list-inline mb-0">
    <li class="list-inline-item">
        <a href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" rel="noopener" target="_blank" title="Share on Facebook">
          <i class="fa fa-facebook"></i>
        </a>
    </li>
    <li class="list-inline-item">
      <a href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" rel="noopener" target="_blank" title="Share on Twitter">
        <i class="fa fa-twitter"></i>
      </a>
    </li>
    <li class="list-inline-item">
      <a href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" rel="noopener" target="_blank" title="Share on Pinterest">
        <i class="fa fa-pinterest"></i>
      </a>
    </li>
    <li class="list-inline-item">
      <a href="mailto:?subject=Thought you might like this {{share_title | remove: '"' | remove: "'" }}. I wanted to share it with you.{{ share_permalink }}" rel="noopener" target="_blank" title="Share on Mail">
        <i class="fa fa-envelope"></i>
      </a>
    </li>
</ul>
