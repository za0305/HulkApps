							},
							{
								"value": "btn-lg",
								"label": "Large"
							}
						],
						"default": ""
					}
    ],
    "blocks": [
			{
        "type": "expect_box",
        "name": "Expect Boxes",
        "settings": [
					{
						"type": "image_picker",
						"id": "box_mob_img",
						"label": "Box Mobile Image",
						"info": "Please add image with size 530x500"
					},
					{
						"type": "image_picker",
						"id": "box_img",
						"label": "Box Desktop Image",
						"info": "Please add image with size 650x630"
					}
        ]
      }
    ]
  }
