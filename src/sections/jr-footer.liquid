              {%- endif -%}
              <div class="justify-content-center mb-3 d-none">
                <div class="custom-radio mx-2 mx-ex-lg-3">
                  <input type="radio" id="owlcrate" name="payment_plan_adult" checked class="d-none" value="{{section.settings.klaviyo_adult}}" @click="_selectNewsletter('type_adult','{{section.settings.klaviyo_adult}}','{{section.settings.klaviyo_jr}}');">
                  <label class="mb-0 font-size-sm" for="owlcrate">
                    <span class="mr-2"></span>OwlCrate
                  </label>
                </div>
                <div class="custom-radio mx-2 mx-ex-lg-3">
                  <input type="radio" id="owlcratejr" name="payment_plan_adult" class="d-none" value="{{section.settings.klaviyo_jr}}" @click="_selectNewsletter('type_jr','{{section.settings.klaviyo_jr}}','{{section.settings.klaviyo_adult}}');">
                  <label class="mb-0 font-size-sm" for="owlcratejr">
                    <span class="mr-2"></span>OwlCrate Jr.
                  </label>
                </div>
                <div class="custom-radio mx-2 mx-ex-lg-3">
                  <input type="radio" id="both_opt" name="payment_plan_adult" class="d-none"  value="{{section.settings.klaviyo_adult}}"  @click="_selectNewsletter('both','{{section.settings.klaviyo_adult}}','{{section.settings.klaviyo_jr}}');">
                  <label class="mb-0 font-size-sm" for="both_opt">
                    <span class="mr-2"></span>Both.
                  </label>
                </div>
              </div>

              <div class="klaviyo-form-wrap">
                <form data-klaviyo-footer-form id="klaviyo_footer_form" class="validate contact-form klaviyo_gdpr_embed_{{section.settings.klaviyo_adult}}"  action="//manage.kmail-lists.com/subscriptions/subscribe" data-ajax-submit="//manage.kmail-lists.com/ajax/subscriptions/subscribe" method="GET" target="_blank" novalidate="novalidate">
                  <input type="hidden" name="g" value="{{section.settings.klaviyo_adult}}" data-input-hidden>
                  <div class="input-group input-group-sm">
                    <input type="email" value="" name="email" class="form-control font-base ls-base" id="k_id_email" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" aria-label="email">
                    <div class="input-group-append">
                      <input type="submit" value="SUBMIT" name="subscribe" class="btn btn-dark font-size-ex-sm px-lg-3 py-2" @click="_submitNewsletter($event);">
                    </div>
                  </div>
                  <div class="klaviyo_messages mt-3 text-center">
                    <div class="success_message text-success" style="display:none;" data-success_message></div>
                    <div class="error_message  text-danger" style="display:none;" data-error_message></div>
                  </div>
                </form>
                <form data-klaviyo-footer-jr id="klaviyo_footer_jr" class="validate contact-form klaviyo_gdpr_embed_{{section.settings.klaviyo_jr}} d-none"  action="//manage.kmail-lists.com/subscriptions/subscribe" data-ajax-submit="//manage.kmail-lists.com/ajax/subscriptions/subscribe" method="GET" target="_blank" novalidate="novalidate">
                  <input type="hidden" name="g" value="{{section.settings.klaviyo_jr}}" data-input-hidden>
                  <div class="input-group input-group-sm">
                    <input type="email" value="" name="email" class="form-control font-base ls-base" id="k_jr_id_email" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}" aria-label="email">
                    <div class="input-group-append"><input type="submit" value="SUBMIT" name="subscribe" class="btn btn-dark font-size-ex-sm px-lg-3 py-2" data-submit></div>
                  </div>
                </form>
              </div>

            {%- endif -%}
          </div>
          {%- if section.settings.show_social_links -%}
            {%- if section.settings.col_3_heading != '' -%}
              <h6>{{- section.settings.col_3_social_heading -}}</h6>
            {%- endif -%}

            <ul class="social-links list-unstyled list-inline mt-4 mt-md-3 mb-5 mb-md-0">
              {%- if section.settings.social_icon_facebook -%}
                <li class="list-inline-item mr-3">
                  <a href="{{ settings.social_facebook_link }}" name="Facebook" title="Facebook" rel="noreferrer" aria-label="Facebook" target="_blank">
                    <i class="fa fa-facebook"></i>
                  </a>
                </li>
              {%- endif -%}

              {%- if section.settings.social_icon_twitter -%}
                <li class="list-inline-item mr-3">
                  <a href="{{ settings.social_twitter_link }}" name="Twitter" title="Twitter" rel="noreferrer" aria-label="Twitter" target="_blank">
                    <i class="fa fa-twitter"></i>
                  </a>
                </li>
              {%- endif -%}

              {%- if section.settings.social_icon_instagram -%}
                <li class="list-inline-item mr-3">
                  <a href="{{ settings.social_instagram_link }}" name="Instagram" title="Instagram" rel="noreferrer" aria-label="Instagram" target="_blank">
                    <i class="fa fa-instagram"></i>
                  </a>
                </li>
              {%- endif -%}

              {%- if section.settings.social_icon_googleplus -%}
                <li class="list-inline-item">
                  <a href="{{ settings.social_googleplus_link }}" name="Google+" title="Google+" rel="noreferrer" aria-label="Google+" target="_blank">
                    <i class="fa fa-google-plus"></i>
                  </a>
                </li>
              {%- endif -%}
