              {%- endif -%}

              {%- if linklists[footer_linklist2].links.size > 0 -%}
                <ul class="list-unstyled footer-navigation mb-4 mb-md-0">
                  {%- for link in linklists[footer_linklist2].links -%}
                    <li>
                      <a class="font-barlow font-size-sm ls-1" href="{{ link.url }}" name="{{ link.title }}" title="{{ link.title }}" aria-label="{{ link.title }}">
                        <span>{{ link.title }}</span>
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}

            </div>
          </div>
        </div>

        <div class="order-md-3 col-md-4 text-center text-md-left mt-lg-4">
          <div class="row justify-content-end">
            <div class="col-12 col-md-6 col-lg-5 my-1 my-md-0">
              {%- if section.settings.col_4_heading != '' -%}
                <h6 class="font-barlow font-weight-semi-bold mb-3 text-uppercase">{{ section.settings.col_4_heading }}</h6>
              {%- endif -%}

              {%- if linklists[footer_linklist].links.size > 0 -%}
                <ul class="list-unstyled footer-navigation mb-4 mb-md-0">
                  {%- for link in linklists[footer_linklist4].links -%}
                    <li>
                      <a class="font-barlow font-size-sm ls-1" href="{{ link.url }}" name="{{ link.title }}" title="{{ link.title }}" aria-label="{{ link.title }}" {% if link.title == 'FAQs' %}target="_blank" rel="noopener noreferrer"{% endif %}>
                        <span>{{ link.title }}</span>
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
            <div class="col-12 col-md-6 col-lg-5 my-1 my-md-0">
              {%- if section.settings.col_5_heading != '' -%}
                <h6 class="font-barlow font-weight-semi-bold mb-3 text-uppercase">{{ section.settings.col_5_heading }}</h6>
              {%- endif -%}

              {%- if linklists[footer_linklist5].links.size > 0 -%}
                <ul class="list-unstyled footer-navigation mb-3 mb-md-0">
                  {%- for link in linklists[footer_linklist5].links -%}
                    <li>
                      <a class="font-barlow font-size-sm ls-1" href="{{ link.url }}" name="{{ link.title }}" title="{{ link.title }}" aria-label="{{ link.title }}">
                        <span>{{ link.title }}</span>
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}

            </div>
          </div>
        </div>
      </div>
      <!--end of row-->

    </div>
    <!--end of container-->
  </div>

  <div data-footer-bottom class="footer-bottom" style="background-color: {{ section.settings.footer_bottom_bg_color }}; color: {{ section.settings.footer_bottom_txt_color }};">
    <div class="{% if section.settings.fluid_footer %}container-fluid{% else %}container{% endif %}">
      <div class="row d-flex align-items-center">
        <div class="col-md-12 text-center">
          <span class="font-size-ex-sm copyright font-secondary">&copy; {{ 'now' | date: "%Y" }} {{ shop.name }} Enterprises Inc., {{ 'layout.footer.all_rights_reserved' | t }}</span>
        </div>
        {%- if section.settings.show_payment_icons -%}
          <div class="col-md-12 text-center mt-1">
            <ul class="list-inline payment-icons my-0">
              {%- if section.settings.payment_icon_visa -%}<li class="list-inline-item"><i class="pf pf-visa"></i></li>{%- endif -%}
              {%- if section.settings.payment_icon_mastercard -%}<li class="list-inline-item"><i class="pf pf-mastercard"></i></li>{%- endif -%}
              {%- if section.settings.payment_icon_ae -%}<li class="list-inline-item"><i class="pf pf-american-express"></i></li>{%- endif -%}
              {%- if section.settings.payment_icon_diners -%}<li class="list-inline-item"><i class="pf pf-diners"></i></li>{%- endif -%}
              {%- if section.settings.payment_icon_paypal -%}<li class="list-inline-item"><i class="pf pf-paypal"></i></li>{%- endif -%}
              {%- if section.settings.payment_icon_stripe -%}<li class="list-inline-item"><i class="pf pf-stripe"></i></li>{%- endif -%}
              {%- if section.settings.payment_icon_applepay -%}<li class="list-inline-item"><i class="pf pf-apple-pay"></i></li>{%- endif -%}
              {%- if section.settings.payment_icon_amazonpay -%}<li class="list-inline-item"><i class="pf pf-amazon-pay"></i></li>{%- endif -%}
            </ul>
          </div>
        {%- endif -%}
      </div>
      <!--end of row-->
    </div>
    <!--end of container-->
  </div>
</footer>

