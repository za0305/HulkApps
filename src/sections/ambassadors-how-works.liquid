<section class="how-works-section position-relative">
  {% if section.settings.work_image != blank %}
    <img
         data-sizes="auto"
         src="{{ section.settings.work_image | img_url: 'original'}}"
         data-srcset="{{ section.settings.work_image | img_url: '320x' }} 320w,
                      {{ section.settings.work_image | img_url: '580x' }} 580w,
                      {{ section.settings.work_image | img_url: '800x' }} 800w,
                      {{ section.settings.work_image | img_url: '1024x' }} 576w
                      "
         class="how-works-background-image" />
  {% else %}
  	{{ 'image' | placeholder_svg_tag: 'how-works-background-image'}}
  {% endif %}
  <div class="custom-container">
    <h2 class="how-works-main-heading">{{ section.settings.section_heading }}</h2>
    <div class="custom-row">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="column-4">
            <div class="how-works-wrapper">
              <div class="icon-wrapper">
				{{ block.settings.work_icon }}
              </div>
              <h3 class="how-works-block-title">{{ block.settings.work_title }}</h3>
              <p class="how-works-block-data">{{ block.settings.work_details }}</p>
            </div>
          </div>
      	{% endfor %}
      {% else %}
        {% for i in  (1..3) %}
        <div class="column-4">
            <div class="how-works-wrapper">
              <div class="icon-wrapper">
                <svg class="how-works-icon" width="56" height="51" viewBox="0 0 56 51" fill="none" xmlns="http://www.w3.org/2000/svg">
