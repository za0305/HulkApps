{% schema %}
  {
    "name": "How Works",
    "max_blocks": 3,
    "settings": [
      {
        "type": "image_picker",
        "id": "work_image",
        "label": "Work Image"
      },
	  {
		"type": "text",
		"id": "section_heading",
		"label": "Heading",
		"default": "HOW IT WORKS"
	  }
	],
	"blocks": [
      {
        "type": "text",
        "name": "Earn Reward",
        "settings": [
          {
            "id": "work_icon",
            "type": "html",
            "label": "Work Icon"
          },
          {
            "id": "work_title",
            "type": "text",
            "label": "Work Title",
			"default": "Sign Up"
          },
          {
            "id": "work_details",
            "type": "text",
            "label": "Work Details",
			"default": "Sign up with your email and Instagram username on this page!"
          }
        ]
      }
    ]
  }
{% endschema %}

