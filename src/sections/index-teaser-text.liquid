<section class="section-content" data-section-id="{{ section.id }}" style="background-color: {{ section.settings.section_bg_color }}; color: {{ section.settings.section_txt_color }}">
    <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
        <div class="row">
            <div class="col-12 text-center">

                {% if section.settings.heading_txt != '' %}
                  <h2 class="section-title mb-4">{{ section.settings.heading_txt }}</h2>
                {% endif %}

                {% if section.settings.lead_txt != '' %}
                  <p class="lead mt-5 px-lg-6">
                      {{ section.settings.lead_txt }}
                  </p>
                {% endif %}

                {% if section.settings.btn_txt != '' %}
                  <a class="btn btn{% if section.settings.btn_type == 'outline' %}-{% endif %}{{ section.settings.btn_type }}-{{ section.settings.btn_variant }} {{ section.settings.btn_size }}" href="{{ section.settings.btn_url }}">{{ section.settings.btn_txt }}</a>
                {% endif %}

            </div>
        </div>
    </div>
</section>



{% schema %}
  {
    "name": "Teaser Text",
    "class": "index-teaser-text",
    "settings": [
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type": "checkbox",
        "id": "fluid_layout",
        "label": "Full Width Layout?",
