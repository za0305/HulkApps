<section  data-section-id="{{ section.id }}" class="mt-md-3">
    <div class="section-content">
    <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
        <div class="row">
            <div class="col-12 text-center mb-2 mb-md-6">
                {% if section.settings.heading_txt != '' %}
                  <h1 class="page-title mb-0">{{ section.settings.heading_txt }}</h1>
                {% else %}
                  <h1 class="page-title mb-0">{{ page.title }}</h1>
                {% endif %}
                {% if section.settings.lead_txt != '' %}
                  <p class="lead">{{ section.settings.lead_txt }}</p>
                {% endif %}
            </div>
        </div>
        {% for block in section.blocks %}
            {% if block.type == 'work_block' %}
                {% if block.settings.work_check %}
                    <div class="row align-items-center work_block">
                        <div class="col-md-6 mb-4 mb-md-0 {% cycle 'order-md-2 pl-md-0 owlfeet-animtion-right','pr-md-0' %}">
                            <div class="owlfeet-animtion d-none d-md-block">
                              <img src="{{ 'owlfeet-how1.svg' | asset_url }}" class="owlfeet-default owlfeet1" alt="animtion-icon" />
                              <img src="{{ 'owlfeet-how2.svg' | asset_url }}" class="owlfeet-default owlfeet2" alt="animtion-icon" />
                              <img src="{{ 'owlfeet-how3.svg' | asset_url }}" class="owlfeet-default owlfeet3" alt="animtion-icon" />
                              <img src="{{ 'owlfeet-how4.svg' | asset_url }}" class="owlfeet-default owlfeet4" alt="animtion-icon" />
                              <img src="{{ 'owlfeet-how5.svg' | asset_url }}" class="owlfeet-default owlfeet5" alt="animtion-icon" />
                              <img src="{{ 'owlfeet-how6.svg' | asset_url }}" class="owlfeet-default owlfeet6" alt="animtion-icon" />
                              <img src="{{ 'owlfeet-how7.svg' | asset_url }}" class="owlfeet-default owlfeet7" alt="animtion-icon" />
                            </div>
                            <div class="position-relative product-img">
                                <img
                                    data-sizes="auto"
                                    src="{{ block.settings.image | img_url: 'pico'}}"
                                    data-srcset="
                                        {{ block.settings.image | img_url: '650x' }} 576w
                                        "
                                    class="lazyload img-fluid h-100" alt="{{ block.settings.heading | escape }}" />
                            </div>
                        </div>
                        <div class="col-md-6 text-center text-md-left {% cycle 'order-md-1','count-icon-right' %}">
                            {% if block.settings.image_svg != blank %}
                                <img src="{{ block.settings.image_svg}}" alt="{{ block.settings.heading | escape }}" class="mh-100 mw-10 count-icon mb-2 mb-md-0" /> 
                            {% elsif block.settings.image_count != blank %}
                                <img src="{{ block.settings.image_count | img_url :'165x' }}" alt="{{ block.settings.heading | escape }}" class="mh-100 mw-10 count-icon mb-2 mb-md-0" /> 
                            {% endif %}
                            <div class="row justify-content-center">
                                <div class="col-md-8 px-xl-4">
                                    <h3 class="mb-0">{{ block.settings.heading }}</h3>
                                    <p>{{ block.settings.txt }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        {% endfor %}
    </div>
    </div>
    <div class="section-content process-section">
        <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
        {% for block in section.blocks %}
             {% if block.type == 'process_block' %}
                {% if block.settings.process_check %}
                    <div class="row align-items-center">
                        <div class="col-md-6 order-md-2 mb-4 mb-md-0">
                            <div class="position-relative product-img">
                                <img
                                    data-sizes="auto"
                                    src="{{ block.settings.process_image | img_url: 'pico'}}"
                                    data-srcset="
                                        {{ block.settings.process_image | img_url: '650x' }} 576w
                                        "
                                    class="lazyload img-fluid h-100" alt="{{ block.settings.process_heading | escape }}" />
                            </div>
                        </div>
                        <div class="col-md-6 order-md-1 pl-xl-8 pr-xl-5 text-center text-md-left">
                            <h2>{{ block.settings.process_heading }}</h2>
                            <p class="mb-4">{{ block.settings.process_txt }}</p>
                            {% if block.settings.btn_txt != '' %}
                                <a {% if block.settings.btn_link %} href="{{ block.settings.btn_link }}" {% endif %} class="btn btn{% if block.settings.btn_type == 'outline' %}-{% endif %}{{ block.settings.btn_type }}-{{ block.settings.btn_variant }} {{ block.settings.btn_size }}">{{ block.settings.btn_txt }}</a>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
             {% endif %}
        {% endfor %}    
        </div>
    </div>
    {% for block in section.blocks %}
        {% if block.type == 'questions_block' %}
            {% if block.settings.questions_check %}
                <div class="questions-section bg-teal-100 py-9 py-lg-10 mt-4 my-md-6">
                    <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-6 text-center">
                                <h2 class="mb-2">{{ block.settings.heading }}</h2>
                                <div class="display-4 font-weight-light mb-4">{{ block.settings.txt }}</div>
                                <div class="d-flex align-items-center justify-content-center">
                                    {% if block.settings.btn_txt != '' %}
                                    <a {% if block.settings.btn_link %} href="{{ block.settings.btn_link }}" {% endif %} target="_blank"  class="btn btn{% if block.settings.btn_type == 'outline' %}-{% endif %}{{ block.settings.btn_type }}-{{ block.settings.btn_variant }} {{ block.settings.btn_size }} mr-3 mr-lg-4">{{ block.settings.btn_txt }}</a>
                                    {% endif %}
                                    {% if block.settings.btn_txt_second != '' %}
                                    <a {% if block.settings.btn_link_second %} href="{{ block.settings.btn_link_second }}" {% endif %} class="btn btn{% if block.settings.btn_type_second == 'outline' %}-{% endif %}{{ block.settings.btn_type_second }}-{{ block.settings.btn_variant_second }} {{ block.settings.btn_size_second }}">{{ block.settings.btn_txt_second }}</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    {% endfor %}
    
</section>

